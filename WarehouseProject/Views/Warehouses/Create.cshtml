@{
  Layout = "_Layout";
}

@model WarehouseProject.Models.Warehouse

<h4>Add a new warehouse</h4>

<p>@Html.ValidationMessageFor(model => model.Building, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.Zipcode, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>


@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Building)
    @Html.TextBoxFor(model => model.Building)
    <br />
    @Html.LabelFor(model => model.Address)
    @Html.TextBoxFor(model => model.Address)
    <br />
    @Html.LabelFor(model => model.City)
    @Html.TextBoxFor(model => model.City)
    <br />
    @Html.LabelFor(model => model.State)
    @Html.TextBoxFor(model => model.State)
    <br />
    @Html.LabelFor(model => model.Zipcode)
    @Html.TextBoxFor(model => model.Zipcode)
    <br />
    @Html.LabelFor(model => model.Notes)
    @Html.TextBoxFor(model => model.Notes)
    <br />


    <input type="submit" value="Add new warehouse" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all warehouses", "Index")</p>