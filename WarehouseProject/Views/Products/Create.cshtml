@{
  Layout = "_Layout";
}

@model WarehouseProject.Models.Product

<h4>Add a new product</h4>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.Barcode, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.LabelFor(model => model.Type)
    @Html.TextBoxFor(model => model.Type)
    @Html.LabelFor(model => model.Description)
    @Html.TextBoxFor(model => model.Description)
    @Html.LabelFor(model => model.Barcode)
    @Html.TextBoxFor(model => model.Barcode)
    @Html.LabelFor(model => model.Quantity)
    @Html.TextBoxFor(model => model.Quantity)
    @Html.LabelFor(model => model.Weight)
    @Html.TextBoxFor(model => model.Weight)
    @Html.LabelFor(model => model.Dimensions)
    @Html.TextBoxFor(model => model.Dimensions)
    @Html.LabelFor(model => model.Picked, "Status")
    @Html.EditorFor(model => model.Picked)
    @Html.LabelFor(model => model.Bin)
    @Html.TextBoxFor(model => model.Bin)
    


    <input type="submit" value="Add new product" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all products", "Index")</p>