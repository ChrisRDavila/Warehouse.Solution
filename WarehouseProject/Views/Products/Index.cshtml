@{
  Layout = "_Layout";
}

@using WarehouseProject.Models;

<h1>Items for @User.Identity.Name</h1>

@if (@Model.Count == 0)
{
  <h3>No products have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Product product in Model)
    {
      <li>@Html.ActionLink($"{product.Barcode}", "Details", new { id = product.ProductId }) | @product.ProductType.Name</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new product", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>