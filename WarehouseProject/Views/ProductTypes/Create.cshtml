    @Html.EditorFor(model => model.Picked)<br>
    @Html.LabelFor(model => model.Bin)
    @Html.TextBoxFor(model => model.Bin)<br> *@
    


    <input type="submit" value="Add new product type" class="btn btn-default" />
}
