@{
  Layout = "_Layout";
}

@using WarehouseProject.Models;

<h1>Product Types for @User.Identity.Name</h1>

@if (@Model.Count == 0)
{
  <h3>No Product Types Added yet</h3>
} 
else
{
  <ul>
    @foreach (ProductType productType in Model)
    {
      <li>@Html.ActionLink($"{productType.Name}", "Details", new { id = productType.ProductTypeId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new product type", "Create")</p>
<p>@Html.ActionLink("See Warehouse List", "Index", "Warehouses")</p>
<p>@Html.ActionLink("See Picklists", "Index", "Picklists")</p>
