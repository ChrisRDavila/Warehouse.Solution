@{
  Layout = "_Layout";
}

@model WarehouseProject.Models.Picklist

<h4>Add a new picklist</h4>

<p>@Html.ValidationMessageFor(model => model.OrderNumber, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.OrderFor, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

<div class="input">
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.OrderNumber)
  @Html.TextBoxFor(model => model.OrderNumber)<br>
  @Html.LabelFor(model => model.OrderFor)
  @Html.TextBoxFor(model => model.OrderFor)<br>
  @Html.LabelFor(model => model.Priority)
  @Html.EditorFor(model => model.Priority)<br>
  @Html.LabelFor(model => model.Carrier)
  @Html.EditorFor(model => model.Carrier)<br>
  @Html.LabelFor(model => model.OrderDate)
  @Html.EditorFor(model => model.OrderDate)<br>
  @Html.LabelFor(model => model.ShipBy)
  @Html.EditorFor(model => model.ShipBy)<br>
  <input type="submit" value="Add new picklist" />
}
</div>
<p>@Html.ActionLink("Show all picklists", "Index")</p>