@{
  Layout = "_Layout";
}

@using WarehouseProject.Models;

<h1>Picklists</h1>

@if (@Model.Count == 0)
{
  <h3>No picklists have been added yet!</h3>
} 

<ul>
  @foreach(Picklist picklist in Model)
  {
    <li>@Html.ActionLink($"{picklist.OrderNumber}", "Details", new { id = picklist.PicklistId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new picklist", "Create")</p>
<p>@Html.ActionLink("Add new Product Type", "Create", "ProductTypes")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>